/dts-v1/;
/plugin/;

/ {
        compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

	/* identification */
	part-number = "BB-I2C2-ADXL34X";
	version = "00A0";       

	fragment@0 {
		target-path="/";
		__overlay__ {
			chosen {
				overlays {
					BB-I2C2-ADXL34X = __TIMESTAMP__;
				};
			};

			aliases {
				/* SLOT I2C1 */
				/*
				adxl345 = "/ocp/i2c@4802a000/adxl345@53";
				*/
				/* SLOT I2C2 */
				adxl345 = "/ocp/i2c@4819c000/adxl345@53";
			};
		};
	};

	fragment@1 {
		/* SLOT I2C1 */
		/*
		target = <&i2c1>;
		*/
		/* SLOT I2C2 */
		target = <&i2c2>;

		__overlay__ {
			status = "okay";

			clock-frequency = <400000>;

			#address-cells = <1>;
			#size-cells = <0>;

			adxl345@53 {
				compatible = "adi,adxl345";
				reg = <0x53>;
				status = "okay";
			};
		};
	};
};

